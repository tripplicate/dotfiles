{
  "workbench.settings.editor": "ui",
  "workbench.colorTheme": "Vitesse Dark Soft",
  "workbench.iconTheme": "minimal-icons-without-explorer-arrows",
  "workbench.productIconTheme": "material-product-icons",
  // General
  "workbench.startupEditor": "none",
  "window.commandCenter": false,
  "window.titleBarStyle": "custom",
  "window.menuBarVisibility": "toggle",
  "editor.scrollbar.vertical": "auto",
  "editor.scrollbar.horizontal": "auto",
  "editor.minimap.enabled": false,
  "breadcrumbs.enabled": false,
  "redhat.telemetry.enabled": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "editor.tabSize": 2,
  "files.trimTrailingWhitespace": true,
  "editor.linkedEditing": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.renderWhitespace": "boundary",
  // Inlay hints
  "editor.inlayHints.enabled": "off",
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.variableTypes.enabled": false,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.inlayHints.parameterTypes.enabled": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,

  "javascript.inlayHints.parameterNames.enabled": "all",
  "javascript.inlayHints.variableTypes.enabled": false,
  "javascript.inlayHints.propertyDeclarationTypes.enabled": true,
  "javascript.inlayHints.parameterTypes.enabled": true,
  "javascript.inlayHints.functionLikeReturnTypes.enabled": true,
  // Font Family
  "editor.fontFamily": "JetBrains Mono",
  "scm.inputFontFamily": "JetBrains Mono",
  "terminal.integrated.fontFamily": "JetBrains Mono",
  "chat.editor.fontFamily": "JetBrains Mono",
  "markdown.preview.fontFamily": "JetBrains Mono",
  "notebook.output.fontFamily": "JetBrains Mono",
  "debug.console.fontFamily": "JetBrains Mono",
  "editor.inlayHints.fontFamily": "JetBrains Mono",
  "editor.codeLensFontFamily": "JetBrains Mono",
  // Terminal
  "terminal.explorerKind": "external",
  "terminal.external.linuxExec": "alacritty",
  // Font size and cursor settings
  "editor.fontSize": 16,
  "terminal.integrated.fontSize": 16,
  "keyboard.dispatch": "keyCode",
  "editor.fontLigatures": false,
  "editor.cursorSmoothCaretAnimation": "on",
  // Linter, formatter
  "prettier.enable": true,
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit",
    "source.organizeImports": "never"
  },
  "eslint.validate": [
    "yaml",
    "markdown",
    "json",
    "jsonc"
  ],
  "css.validate": false,
  "scss.validate": false,
  "stylelint.validate": [
    "css",
    "scss",
    "postcss",
    "vue"
  ],
  // Configs for languages
  "[vue]": {
    "editor.defaultFormatter": "Vue.volar"
  },
  // Apc
  "apc.electron": {
    "titleBarStyle": "hiddenInset",
    "trafficLightPosition": {
      "x": 7,
      "y": 5
    }
  },
  "apc.activityBar": {
    "position": "bottom",
    "hideSettings": true,
    "size": 40,
    "itemSize": 32
  },
  "apc.statusBar": {
    "position": "editor-bottom",
    "height": 40,
    "fontSize": 14
  },
  // Vim
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.normalModeKeyBindings": [
    {
      "before": [
        ":"
      ],
      "commands": [
        "workbench.action.showCommands",
      ],
      "silent": true
    },
    {
      "before": [
        "<C-space>"
      ],
      "commands": [
        "workbench.action.navigateLeft",
      ],
      "silent": true
    },
    {
      "before": [
        "C-h"
      ],
      "commands": [
        "workbench.action.previousEditor"
      ],
      "silent": true
    },
    {
      "before": [
        "C-l"
      ],
      "commands": [
        "workbench.action.nextEditor"
      ],
      "silent": true
    },
  ],
  "vim.handleKeys": {
    "<C-f>": false,
    "<C-a>": false,
    "<C-p>": false,
  },
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },
}