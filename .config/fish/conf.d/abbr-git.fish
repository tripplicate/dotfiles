# Status
abbr -a gst "git status"

# Add
abbr -a ga "git add"
abbr -a gaa "git add --all"

# Commit
abbr -a gc "git commit"
abbr -a gc! "git commit --amend"

# Pull
abbr -a gpl "git pull"

# Branch
abbr -a gb "git branch -vv"
abbr -a gbA "git branch -vva"
abbr -a gbd "git branch -d"
abbr -a gbD "git branch -d"

abbr -a gco "git checkout"
abbr -a gcob "git checkout -b"
abbr -a gcom "git checkout (git config init.defaultbranch)"

# Log
abbr -a gll "git log --pretty=format:'%C(yellow)%h %Cred%ad %Cblue%an%Cgreen%d %Creset%s' --date=short"

# Diff
abbr -a gd "git diff"
